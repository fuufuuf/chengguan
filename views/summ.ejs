<html>

<head>
<meta charset="utf-8">
<script type="text/javascript" src="/javascripts/echarts.common.min.js"></script>
</head>

<body style="width: 100%; height: 100%; margin: 0">
<div id="container" style="width: 100%; height: 100%"></div>

<script type="text/javascript">


    var dom = document.getElementById("container");
    var myChart = echarts.init(dom);
    option = {
        title : {
            text: '<%=name%>',
            x: 'center'
        },
        tooltip : {
            trigger: 'axis',
            axisPointer : {
                type : 'shadow'
            }
        },
        legend: {
            data:['<%=type%>'],
            top: 30
        },
        grid: {
            left: '3%',
            right: '4%',
            bottom: '3%',
            containLabel: true
        },
        xAxis : [
            {
                type : 'value'
            }
        ],
        yAxis : [
            {
                type : 'category',
                axisTick : {show: false},
                data :[<%-m_list%>]

            }
        ],
        series : [
            {
                name:'<%=type%>',
                type:'bar',
                itemStyle : {
                    normal: {
                        label: {show: true, position: 'inside'}
                    }
                },
                barCategoryGap: '30%',
                data:[<%=m_data%>]
            }
        ],
        color : ['#ff6600']
    };


    myChart.setOption(option, true);

</script>
</body>


</html>